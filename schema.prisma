datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  referralCode String   @unique
  goalAchieved Float    @default(0)
  totalGoal    Float    @default(30000)
  level        String   @default("Star")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Donation {
  id           Int      @id @default(autoincrement())
  name         String
  email        String
  phone        String
  amount       Float
  referralCode String?
  createdAt    DateTime @default(now())
}
